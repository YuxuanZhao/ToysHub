<%- include ('partials/header') %>

<h1>Create a new toy</h1>

<form action = "/toys" method = "POST">
    
    <div class="form-group">
        <label for="name">Name</label>
        <input class = "form-control" type = "text" name = "name" placeholder = "Toy name">
    </div>
    
    <div class="form-group">
        <label for="picture">Picture URL</label>
        <input class = "form-control" type = "text" name = "picture" placeholder = "Toy picture URL">
    </div>
    
    <div class="form-group">
        <label for="description">Description</label>
        <input class = "form-control" type = "text" name = "description" placeholder = "Toy description">
    </div>
    
    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>

</form>

<%- include ('partials/footer') %>
<%- include ('../partials/header') %>

<h1 style="text-align: center">Create a new toy</h1>

<div style = "width: 30%; margin: 30px auto;">
    <form action = "/toys" method = "POST">
        
        <div class="form-group">
            <label for="name">Name</label>
            <input class = "form-control" type = "text" name = "name" placeholder = "Toy name">
        </div>
        
        <div class="form-group">
            <label for="picture">Picture URL</label>
            <input class = "form-control" type = "text" name = "picture" placeholder = "Toy picture URL">
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <input class = "form-control" type = "text" name = "description" placeholder = "Toy description">
        </div>
                
        <div class="form-group">
            <label for="price">Price</label>
            <input class = "form-control" type = "text" name = "price" placeholder = "Toy price">
        </div>
        
        <button class = "btn btn-lg btn-primary btn-block" style = "margin: 10px 0 10px 0">Submit!</button>
    
    </form>
    <a href = "/toys">Back</a>

</div>



<%- include ('../partials/footer') %>
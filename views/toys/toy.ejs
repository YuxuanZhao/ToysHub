<%- include ('../partials/header') %>
<div class = "row">
    <div class = "col-md-9">
        <div class = "thumbnail">
            <img src = "<%= toy.picture %>" class = "img-responsive">
            <div style = "padding: 19px">
                <div class = "caption-full">
                    <h4 class = "pull-right"><%= toy.price %></h4>
                    <h4><%= toy.name %></h4>
                    <p><%= toy.description %></p>
                </div>
                <form action = "/toys/<%= toy._id %>/edit" method="GET" style = "display: inline">
                    <button class = "btn btn-primary">Edit</button>
                </form>
                <form action = "/toys/<%= toy._id %>?_method=DELETE" method="POST" style = "display: inline">
                	<button class = "btn btn-danger">Delete</button>
                </form>
                <span class = "pull-right">Posted by <strong><%= toy.author.username %></strong></span>
            </div>
        </div>
    </div>


    <div class = "col-md-3">
        <div class = "well">
            <div class = "text-right">
                <form action = "/toys/<%= toy._id %>/comment/new" method="GET">
                    <button class = "btn btn-primary">Comment here!</button>
                </form>
            </div>
            
            <hr>

            <% toy.comments.forEach (function (comment){ %>
            <div class = "row">
                
                <div class = "col-md-12">
                <h4><%= comment.author.username %></h4>
                <p><%= comment.content %></p>
                <form action = "/toys/<%= toy._id %>/comment/<%= comment._id %>/edit" method="GET" style = "display: inline">
                    <button class = "btn btn-primary">Edit</button>
                </form>
                <form action = "/toys/<%= toy._id %>/comment/<%= comment._id %>?_method=DELETE" method="POST" style = "display: inline">
                	<button class = "btn btn-danger">Delete</button>
                </form>
                
                <div></div>
                
            <div>
            <% }); %>
        </div>
    </div>

</div>

<%- include ('../partials/footer') %>
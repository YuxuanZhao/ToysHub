<h1 style="text-align: center">Edit comment</h1>

<div style = "width: 30%; margin: 30px auto;">

<form action="/toys/<%= toy._id %>/comment/<%=comment._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" value="<%=comment.content %>" name="content" placeholder="text">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
</form>

</div>


<%- include ('../partials/header') %>

<h1 style="text-align: center">Create a new comment for <%= toy.name %></h1>

<div style = "width: 30%; margin: 30px auto;">

<form action = "/toys/<%= toy._id %>/comment" method = "POST">
    
    <div class="form-group">
        <label for="author">Author name</label>
        <input class = "form-control" type = "text" name = "author" placeholder = "Author name">
    </div>
    
    <div class="form-group">
        <label for="content">Comment content</label>
        <input class = "form-control" type = "text" name = "content" placeholder = "Comment content">
    </div>
    
    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>

</form>

</div>

<%- include ('../partials/footer') %>